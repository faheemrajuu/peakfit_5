%load_ext autoreload
%autoreload 2

from peakfit_5 import FitConfig, run, make_figure
from pathlib import Path

FILE = "your_sample.dat"
SAVE_OUTPUT   = Ture
QMIN, QMAX    = 0.08, 0.27
USE_AUTO_BG   = True
PEAK_FRACTION = 0.05

# optional colors (only used if keys match peak_positions)
PEAK_COLORS = {
    0.136: "rgba(255,165,0,0.35)",
    0.165: "rgba(0,114,178,0.35)",
}

plots_folder = Path(FILE).resolve().parent / "plots"
plots_folder.mkdir(exist_ok=True)

cfg = FitConfig(
    file=FILE,
    save_output=SAVE_OUTPUT,
    qmin=QMIN, qmax=QMAX,
    peak_positions=(0.18, 0.191, 0.2),
    use_auto_bg=USE_AUTO_BG,
    peak_fraction=PEAK_FRACTION,
    peak_colors=PEAK_COLORS,
    lock_A={0.18:200, 0.191:145, 0.2:145, },  # keys MUST match peak_positions
    lock_w={0.18: 0.006, 0.191: 0.009, 0.2: 0.008}
)

res = run(cfg)
fig = make_figure(res, cfg)
fig.show()

# Save (requires kaleido for PNG)
fig.write_image(plots_folder / f"{Path(FILE).stem}.png", scale=2)

res["table"]
